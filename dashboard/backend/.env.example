# Database Configuration
DATABASE_URL=sqlite:///./dashboard.db

# Discord OAuth2
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=http://localhost:3000/callback
DISCORD_BOT_TOKEN=your_bot_token

# Security
JWT_SECRET=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=info

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379/0
ENABLE_REDIS_CACHE=false

# Rate Limiting
RATE_LIMIT=60/minute
RATE_LIMIT_BURST=100

# Bot Integration
BOT_COMMAND_PREFIX=!
GUILD_ID=your_guild_id
ADMIN_ROLE_IDS=role_id1,role_id2
MOD_ROLE_IDS=role_id3,role_id4

# Logging
LOG_FILE=logs/dashboard-api.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_NOTIFICATIONS=true
ENABLE_AUDIT_LOG=true

# AutoMod Settings
DEFAULT_SPAM_THRESHOLD=5
DEFAULT_RAID_THRESHOLD=10
DEFAULT_MUTE_DURATION=3600

# Leveling Settings
DEFAULT_XP_PER_MESSAGE=15
DEFAULT_XP_COOLDOWN=60
