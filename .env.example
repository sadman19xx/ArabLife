# Bot Configuration
TOKEN=your_bot_token_here
GUILD_ID=your_guild_id_here
APPLICATION_ID=your_application_id_here  # Get this from Discord Developer Portal

# Welcome Settings
WELCOME_VOICE_CHANNEL_ID=1309595750878937240
WELCOME_SOUND_PATH=welcome.mp3
DEFAULT_VOLUME=0.5

# Logging Settings
LOG_TO_FILE=1
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_DIR=logs
ROLE_ACTIVITY_LOG_CHANNEL_ID=your_role_log_channel_id
AUDIT_LOG_CHANNEL_ID=your_audit_log_channel_id
ERROR_LOG_CHANNEL_ID=your_error_log_channel_id

# AutoMod Settings
AUTOMOD_ENABLED=1
AUTOMOD_ACTION=warn  # warn, mute, kick, ban
AUTOMOD_SPAM_THRESHOLD=5
AUTOMOD_SPAM_INTERVAL=5
AUTOMOD_RAID_THRESHOLD=10
AUTOMOD_RAID_INTERVAL=10

# Health Check Settings
HEALTH_CHECK_HOST=127.0.0.1
HEALTH_CHECK_PORT=8080
HEALTH_CHECK_METRICS_COOLDOWN=60

# Content Filters
BLACKLISTED_WORDS=word1,word2,word3
ALLOWED_DOMAINS=discord.com,discord.gg

# Command Cooldowns (in seconds)
ROLE_COMMAND_COOLDOWN=5
SOUND_COMMAND_COOLDOWN=5
STATUS_COMMAND_COOLDOWN=5
TICKET_COMMAND_COOLDOWN=5
SECURITY_COMMAND_COOLDOWN=5
AUTOMOD_COMMAND_COOLDOWN=5

# Role Settings
VISA_IMAGE_URL=https://i.imgur.com/default_visa.png

# Voice Settings
FFMPEG_PATH=/usr/bin/ffmpeg  # Default Linux path

# FiveM Integration Settings
FIVEM_API_PORT=3033  # Port for FiveM integration API
FIVEM_API_HOST=127.0.0.1  # Host for FiveM integration API
