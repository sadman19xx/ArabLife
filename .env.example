# Bot Token and Guild
TOKEN=your_bot_token_here
GUILD_ID=your_guild_id_here

# Role Settings
ROLE_IDS_ALLOWED=role_id1,role_id2  # Comma-separated list of role IDs
ROLE_ID_TO_GIVE=role_id_here
ROLE_ID_REMOVE_ALLOWED=role_id_here

# Channel IDs
ROLE_ACTIVITY_LOG_CHANNEL_ID=channel_id_here
AUDIT_LOG_CHANNEL_ID=channel_id_here
ERROR_LOG_CHANNEL_ID=channel_id_here  # Optional, for error logging
WELCOME_VOICE_CHANNEL_ID=channel_id_here
WELCOME_CHANNEL_ID=channel_id_here

# Welcome Settings
WELCOME_BACKGROUND_URL=https://i.imgur.com/your_background.png
WELCOME_MESSAGE=Welcome {user} to {server}! ðŸŽ‰
GOODBYE_MESSAGE=Goodbye {user}, we hope to see you again! ðŸ‘‹
WELCOME_EMBED_COLOR=0x2ecc71
WELCOME_EMBED_TITLE=Welcome to {server}!
WELCOME_EMBED_DESCRIPTION=Welcome {user} to our community!\n\nMember Count: {member_count}

# Voice Settings
WELCOME_SOUND_PATH=path/to/welcome.mp3  # Optional
DEFAULT_VOLUME=0.5
FFMPEG_PATH=/usr/bin/ffmpeg  # Optional, defaults to system FFmpeg

# Command Cooldowns (seconds)
ROLE_COMMAND_COOLDOWN=5
STATUS_COMMAND_COOLDOWN=10
SOUND_COMMAND_COOLDOWN=5
TICKET_COMMAND_COOLDOWN=30

# Security Settings
MAX_STATUS_LENGTH=100
BLACKLISTED_WORDS=word1,word2  # Comma-separated list
MAX_MENTIONS=5
RAID_PROTECTION=true
MIN_ACCOUNT_AGE=7  # days
ALLOWED_DOMAINS=discord.com,discord.gg  # Comma-separated list
SPAM_DETECTION=true
AUTO_TIMEOUT_DURATION=3600  # seconds
WARNING_THRESHOLD=3
WARNING_ACTION=timeout  # timeout, kick, ban
WARNING_DURATION=3600  # seconds
WARNING_EXPIRE_DAYS=30
EXEMPT_ROLES=role_id1,role_id2  # Roles exempt from security checks

# AutoMod Settings
AUTOMOD_ENABLED=true
AUTOMOD_SPAM_THRESHOLD=5
AUTOMOD_SPAM_INTERVAL=5
AUTOMOD_RAID_THRESHOLD=10
AUTOMOD_RAID_INTERVAL=30
AUTOMOD_ACTION=warn  # warn, mute, kick, ban
AUTOMOD_IGNORED_CHANNELS=channel_id1,channel_id2
AUTOMOD_IGNORED_ROLES=role_id1,role_id2

# Leveling Settings
LEVELING_ENABLED=true
XP_PER_MESSAGE=15
XP_COOLDOWN=60
LEVEL_UP_CHANNEL_ID=channel_id_here
LEVEL_UP_MESSAGE=Congratulations {user}! You reached level {level}!
ROLE_REWARDS={"10":"role_id1","20":"role_id2"}  # JSON string of level:role_id pairs
CHANNEL_MULTIPLIERS={"channel_id1":1.5,"channel_id2":2.0}  # JSON string of channel_id:multiplier pairs
ROLE_MULTIPLIERS={"role_id1":1.5,"role_id2":2.0}  # JSON string of role_id:multiplier pairs

# Visa Settings
VISA_IMAGE_URL=https://i.imgur.com/your_image_id.png

# Ticket Settings
TICKET_STAFF_ROLE_ID=role_id_here
TICKET_CATEGORY_ID=category_id_here
TICKET_LOG_CHANNEL_ID=channel_id_here
TICKET_ARCHIVE_DAYS=30
TICKET_CLOSE_DELAY=5  # seconds before deleting closed ticket
TICKET_RATE_LIMIT=1  # max open tickets per user
TICKET_AUTO_CLOSE_HOURS=72  # hours until inactive tickets auto-close

# Department Role IDs
PLAYER_REPORT_ROLE_ID=role_id_here
HEALTH_DEPT_ROLE_ID=role_id_here
INTERIOR_DEPT_ROLE_ID=role_id_here
FEEDBACK_ROLE_ID=role_id_here

# Logging Settings
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE_PATH=logs/bot.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
