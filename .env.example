# Bot Configuration
TOKEN=your_bot_token_here
GUILD_ID=your_guild_id_here

# Channel IDs
WELCOME_CHANNEL_ID=0  # Channel for welcome messages
WELCOME_VOICE_CHANNEL_ID=0  # Voice channel for welcome sounds
ROLE_ACTIVITY_LOG_CHANNEL_ID=0  # Channel for role changes
AUDIT_LOG_CHANNEL_ID=0  # Channel for audit logs
ERROR_LOG_CHANNEL_ID=0  # Channel for error logs
LEVEL_UP_CHANNEL_ID=0  # Channel for level up announcements

# Role IDs
ROLE_IDS_ALLOWED=role_id1,role_id2  # Roles that can use commands
ROLE_ID_TO_GIVE=0  # Visa role to give
ROLE_ID_REMOVE_ALLOWED=0  # Role that can remove visa

# Welcome Settings
WELCOME_BACKGROUND_URL=https://i.imgur.com/your_background.png
WELCOME_MESSAGE=Welcome {user} to {server}! ðŸŽ‰
GOODBYE_MESSAGE=Goodbye {user}, we hope to see you again! ðŸ‘‹
WELCOME_EMBED_COLOR=0x2ecc71
WELCOME_EMBED_TITLE=Welcome to {server}!
WELCOME_EMBED_DESCRIPTION=Welcome {user} to our community!\n\nMember Count: {member_count}

# Voice Settings
WELCOME_SOUND_PATH=welcome.mp3  # Optional welcome sound file
DEFAULT_VOLUME=0.5  # Default volume for voice commands
FFMPEG_PATH=  # Optional custom FFmpeg path

# Security Settings
MAX_STATUS_LENGTH=100  # Maximum length for status messages
BLACKLISTED_WORDS=  # Comma-separated list of blacklisted words
MAX_MENTIONS=5  # Maximum mentions per message
RAID_PROTECTION=true  # Enable raid protection
MIN_ACCOUNT_AGE=7  # Minimum account age in days
ALLOWED_DOMAINS=discord.com,discord.gg  # Allowed domains for links
SPAM_DETECTION=true  # Enable spam detection
AUTO_TIMEOUT_DURATION=3600  # Timeout duration in seconds
WARNING_THRESHOLD=3  # Number of warnings before action
WARNING_ACTION=timeout  # timeout, kick, or ban
WARNING_DURATION=3600  # Warning duration in seconds
WARNING_EXPIRE_DAYS=30  # Days until warnings expire
EXEMPT_ROLES=  # Roles exempt from security checks

# AutoMod Settings
AUTOMOD_ENABLED=true  # Enable automod
AUTOMOD_SPAM_THRESHOLD=5  # Messages before spam trigger
AUTOMOD_SPAM_INTERVAL=5  # Spam check interval in seconds
AUTOMOD_RAID_THRESHOLD=10  # Joins before raid trigger
AUTOMOD_RAID_INTERVAL=30  # Raid check interval in seconds
AUTOMOD_ACTION=warn  # warn, mute, kick, ban
AUTOMOD_IGNORED_CHANNELS=  # Channels to ignore
AUTOMOD_IGNORED_ROLES=  # Roles to ignore

# Leveling Settings
LEVELING_ENABLED=true  # Enable leveling system
XP_PER_MESSAGE=15  # XP per message
XP_COOLDOWN=60  # Seconds between XP gains
LEVEL_UP_MESSAGE=Congratulations {user}! You reached level {level}!
ROLE_REWARDS={}  # JSON of level:role_id pairs
CHANNEL_MULTIPLIERS={}  # JSON of channel_id:multiplier pairs
ROLE_MULTIPLIERS={}  # JSON of role_id:multiplier pairs

# Ticket Settings
TICKET_STAFF_ROLE_ID=0  # Role that can see tickets
TICKET_CATEGORY_ID=0  # Category for tickets
TICKET_LOG_CHANNEL_ID=0  # Channel for ticket logs
TICKET_ARCHIVE_DAYS=30  # Days to keep closed tickets
TICKET_CLOSE_DELAY=5  # Seconds before deleting closed tickets
TICKET_RATE_LIMIT=1  # Maximum open tickets per user
TICKET_AUTO_CLOSE_HOURS=72  # Hours until auto-close

# Department Role IDs
PLAYER_REPORT_ROLE_ID=0  # Staff for player reports
HEALTH_DEPT_ROLE_ID=0  # Health department staff
INTERIOR_DEPT_ROLE_ID=0  # Interior department staff
FEEDBACK_ROLE_ID=0  # Staff for feedback/suggestions

# Logging Settings
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE_PATH=logs/bot.log  # Path to log file
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_MAX_BYTES=10485760  # 10MB max file size
LOG_BACKUP_COUNT=5  # Number of backup files
LOG_TO_CONSOLE=true  # Enable console logging
LOG_TO_FILE=true  # Enable file logging

# Health Check Settings
HEALTH_CHECK_HOST=0.0.0.0  # Host to bind health check server
HEALTH_CHECK_PORT=0  # Port (0 = auto-find available port)
HEALTH_CHECK_METRICS_COOLDOWN=5.0  # Seconds between metrics requests
