# Bot Configuration
TOKEN=YOUR_BOT_TOKEN_HERE  # Get this from Discord Developer Portal -> Your Application -> Bot -> Token
GUILD_ID=YOUR_GUILD_ID_HERE  # Get this by right-clicking your server name with Developer Mode enabled
APPLICATION_ID=YOUR_APP_ID_HERE  # Get this from Discord Developer Portal -> Your Application -> General Information -> Application ID

# Welcome Voice Settings
WELCOME_VOICE_CHANNEL_ID=1309595750878937240
WELCOME_SOUND_PATH=welcome.mp3
WELCOME_SOUND_VOLUME=0.5  # Volume multiplier (0.1 to 2.0)

